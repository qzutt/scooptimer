<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AC-130 Gunner Simulation</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Load Tone.js for audio -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tone/14.8.49/Tone.min.js"></script>
    <style>
        /* Use Inter font */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #000;
            color: #0f0; /* Night vision green */
            overflow: hidden;
            cursor: none; /* Hide default cursor */
        }
        canvas {
            display: block;
            background-color: #0a0a0a;
            width: 100%;
            height: 100%;
        }
        /* Scanlines overlay for that CRT feel */
        .scanlines {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: repeating-linear-gradient(
                to bottom,
                rgba(0, 0, 0, 0),
                rgba(0, 0, 0, 0) 1px,
                rgba(0, 0, 0, 0.3) 2px,
                rgba(0, 0, 0, 0.3) 3px
            );
            pointer-events: none;
            z-index: 100;
        }
        /* Static/noise effect */
        .noise {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" opacity="0.1"><filter id="f"><feTurbulence type="fractalNoise" baseFrequency="0.8" numOctaves="1" stitchTiles="stitch"/></filter><rect width="100%" height="100%" filter="url(%23f)"/></svg>');
            pointer-events: none;
            z-index: 99;
            animation: noise 0.2s infinite;
        }
        @keyframes noise {
            0% { transform: translate(0, 0); }
            10% { transform: translate(-5px, -5px); }
            20% { transform: translate(5px, 5px); }
            30% { transform: translate(-5px, 5px); }
            40% { transform: translate(5px, -5px); }
            50% { transform: translate(-5px, -5px); }
            60% { transform: translate(5px, 5px); }
            70% { transform: translate(-5px, 5px); }
            80% { transform: translate(5px, -5px); }
            90% { transform: translate(-5px, -5px); }
            100% { transform: translate(0, 0); }
        }
        /* Custom cursor (reticle) */
        .reticle {
            position: fixed;
            pointer-events: none;
            width: 50px;
            height: 50px;
            border: 1px solid #0f0;
            border-radius: 50%;
            transform: translate(-50%, -50%);
            z-index: 101;
        }
        .reticle::before, .reticle::after {
            content: '';
            position: absolute;
            background-color: #0f0;
        }
        .reticle::before {
            width: 1px;
            height: 100%;
            left: 50%;
            transform: translateX(-50%);
        }
        .reticle::after {
            width: 100%;
            height: 1px;
            top: 50%;
            transform: translateY(-50%);
        }
        /* Top bar for info */
        #info-bar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            padding: 8px 16px;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 90;
            font-family: 'Courier New', Courier, monospace;
            font-size: 14px;
        }
        /* Message box for start */
        #message-box {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(0, 20, 0, 0.9);
            border: 1px solid #0f0;
            padding: 24px;
            z-index: 200;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0 0 20px #0f0;
        }
        #message-box h2 {
            font-size: 24px;
            margin-bottom: 16px;
        }
        #message-box button {
            background-color: #0f0;
            color: #000;
            border: none;
            padding: 12px 24px;
            font-weight: bold;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body class="bg-black w-full h-screen overflow-hidden">
    <!-- UI Overlays -->
    <div id="info-bar" class="text-green-400 flex justify-between">
        <div>AC-130 GUNNER | STATUS: ONLINE</div>
        <div>AMMO: <span id="ammo-count">INF</span></div>
        <div>TARGETS: <span id="target-count">0</span></div>
    </div>
    
    <div class="scanlines"></div>
    <div class="noise"></div>
    <div class="reticle" id="reticle"></div>

    <!-- Game Canvas -->
    <canvas id="gameCanvas"></canvas>

    <!-- Start Message -->
    <div id="message-box">
        <h2 class="text-green-400">GUNNER SYSTEM ONLINE</h2>
        <p class="text-green-400 mb-4">Click to engage targets. <br> (Sound warning)</p>
        <button id="startButton">ENGAGE</button>
    </div>

    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        
        const reticle = document.getElementById('reticle');
        const targetCountEl = document.getElementById('target-count');
        const messageBox = document.getElementById('message-box');
        const startButton = document.getElementById('startButton');

        let width, height;
        let mouse = { x: 0, y: 0, firing: false };
        let targets = [];
        let projectiles = [];
        let explosions = [];
        let frame = 0;
        let audioReady = false;

        // --- Audio Engine ---
        let cannonSynth;
        
        function initAudio() {
            if (audioReady) return;
            Tone.start();
            cannonSynth = new Tone.MembraneSynth({
                pitchDecay: 0.01,
                octaves: 2,
                envelope: {
                    attack: 0.001,
                    decay: 0.2,
                    sustain: 0.01,
                    release: 0.1,
                },
            }).toDestination();
            
            // Reverb for that "distant" feel
            const reverb = new Tone.Reverb(1.5).toDestination();
            cannonSynth.connect(reverb);
            audioReady = true;
            console.log('Audio context started.');
        }

        // --- Game Objects ---
        class Target {
            constructor(x, y, type) {
                this.x = x || Math.random() * width;
                this.y = y || Math.random() * height;
                this.type = type || (Math.random() > 0.5 ? 'vehicle' : 'building');
                if (this.type === 'vehicle') {
                    this.w = 15;
                    this.h = 8;
                    this.hp = 10;
                } else {
                    this.w = 20 + Math.random() * 10;
                    this.h = 20 + Math.random() * 10;
                    this.hp = 50;
                }
                this.maxHp = this.hp;
                this.rotation = Math.random() * Math.PI * 2;
            }

            draw() {
                ctx.save();
                ctx.translate(this.x, this.y);
                ctx.rotate(this.rotation);
                ctx.fillStyle = 'rgba(150, 255, 150, 0.8)';
                ctx.fillRect(-this.w / 2, -this.h / 2, this.w, this.h);
                
                // Draw heat signature (brighter center)
                ctx.fillStyle = 'rgba(255, 255, 255, 0.7)';
                ctx.fillRect(-this.w / 4, -this.h / 4, this.w / 2, this.h / 2);
                
                ctx.restore();
            }

            takeDamage(amount) {
                this.hp -= amount;
                return this.hp <= 0;
            }
        }

        class Projectile {
            constructor(targetX, targetY) {
                // Projectiles come from the "sky" (off-screen)
                this.x = -100 + Math.random() * (width + 200);
                this.y = -100;
                this.targetX = targetX + (Math.random() - 0.5) * 15; // Add inaccuracy
                this.targetY = targetY + (Math.random() - 0.5) * 15;
                this.speed = 15; // How fast the tracer moves
                this.lifetime = 50; // Frames before it hits
                
                let angle = Math.atan2(this.targetY - this.y, this.targetX - this.x);
                this.vx = Math.cos(angle) * this.speed;
                this.vy = Math.sin(angle) * this.speed;
                
                // Calculate total travel time to estimate "hit"
                // This is a simplification. A real sim would use ballistic arcs.
                const dist = Math.hypot(this.targetX - this.x, this.targetY - this.y);
                this.timeToHit = Math.floor(dist / this.speed);
                
                this.age = 0;
            }

            update() {
                this.x += this.vx;
                this.y += this.vy;
                this.age++;
                
                if (this.age >= this.timeToHit) {
                    // Impact
                    createExplosion(this.targetX, this.targetY, 30, 20);
                    checkDamage(this.targetX, this.targetY, 40, 10); // 40px radius, 10 damage
                    return false; // Destroy projectile
                }
                return true;
            }

            draw() {
                ctx.beginPath();
                ctx.moveTo(this.x, this.y);
                ctx.lineTo(this.x - this.vx * 2, this.y - this.vy * 2); // Tracer tail
                ctx.strokeStyle = 'rgba(255, 255, 200, 0.8)';
                ctx.lineWidth = 2;
                ctx.stroke();
            }
        }

        class Particle {
            constructor(x, y, vx, vy, life) {
                this.x = x;
                this.y = y;
                this.vx = vx;
                this.vy = vy;
                this.life = life;
                this.maxLife = life;
            }

            update() {
                this.x += this.vx;
                this.y += this.vy;
                this.vx *= 0.98; // Friction
                this.vy *= 0.98;
                this.life--;
                return this.life > 0;
            }

            draw() {
                const alpha = (this.life / this.maxLife) * 0.9;
                ctx.fillStyle = `rgba(255, 255, 200, ${alpha})`;
                ctx.fillRect(this.x, this.y, 2, 2);
            }
        }

        // --- Game Logic ---
        function createExplosion(x, y, particleCount, maxSpeed) {
            for (let i = 0; i < particleCount; i++) {
                const angle = Math.random() * Math.PI * 2;
                const speed = Math.random() * maxSpeed;
                const vx = Math.cos(angle) * speed;
                const vy = Math.sin(angle) * speed;
                const life = 20 + Math.random() * 30;
                explosions.push(new Particle(x, y, vx, vy, life));
            }
            // Add a "flash"
            explosions.push({
                x, y,
                life: 5,
                maxLife: 5,
                radius: 40 + Math.random() * 20,
                update: function() {
                    this.life--;
                    return this.life > 0;
                },
                draw: function() {
                    const alpha = this.life / this.maxLife;
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.radius * (1 - alpha), 0, Math.PI * 2);
                    ctx.fillStyle = `rgba(255, 255, 255, ${alpha * 0.8})`;
                    ctx.fill();
                }
            });
        }
        
        function checkDamage(x, y, radius, damage) {
            targets.forEach((target, index) => {
                const dist = Math.hypot(target.x - x, target.y - y);
                if (dist < radius + (target.w + target.h) / 4) { // Simple bounding box check
                    if (target.takeDamage(damage)) {
                        // Target destroyed
                        createExplosion(target.x, target.y, 100, 15);
                        targets.splice(index, 1);
                    }
                }
            });
        }

        function spawnTargets(count) {
            for (let i = 0; i < count; i++) {
                targets.push(new Target());
            }
        }

        function fireCannon() {
            if (!audioReady) return;
            
            projectiles.push(new Projectile(mouse.x, mouse.y));
            
            // Play fire sound
            try {
                cannonSynth.triggerAttackRelease('C1', '8n');
            } catch (e) {
                console.error('Audio error:', e);
            }
        }

        // --- Main Loop ---
        function gameLoop() {
            // Semi-transparent overlay for tracer/night vision effect
            ctx.fillStyle = 'rgba(0, 10, 0, 0.1)';
            ctx.fillRect(0, 0, width, height);
            
            frame++;

            // Handle firing
            if (mouse.firing && frame % 15 === 0) { // Fire rate (every 15 frames)
                fireCannon();
            }

            // Update and draw targets
            targets.forEach(target => target.draw());
            targetCountEl.textContent = targets.length;

            // Update and draw projectiles
            projectiles = projectiles.filter(p => p.update());
            projectiles.forEach(p => p.draw());
            
            // Update and draw explosions
            explosions = explosions.filter(e => e.update());
            explosions.forEach(e => e.draw());
            
            // Spawn new targets if empty
            if (targets.length === 0 && frame % 300 === 0) {
                 spawnTargets(5 + Math.floor(Math.random() * 5));
            }

            requestAnimationFrame(gameLoop);
        }

        // --- Event Listeners ---
        function resize() {
            width = window.innerWidth;
            height = window.innerHeight;
            canvas.width = width;
            canvas.height = height;
        }
        
        window.addEventListener('resize', resize);
        
        document.addEventListener('mousemove', (e) => {
            mouse.x = e.clientX;
            mouse.y = e.clientY;
            reticle.style.left = `${e.clientX}px`;
            reticle.style.top = `${e.clientY}px`;
        });
        
        document.addEventListener('mousedown', (e) => {
            if (e.button === 0 && audioReady) { // Left click
                mouse.firing = true;
                // Fire immediately on first click
                if (frame % 15 !== 0) {
                    fireCannon();
                }
            }
        });
        
        document.addEventListener('mouseup', (e) => {
            if (e.button === 0) {
                mouse.firing = false;
            }
        });

        // Prevent context menu
        document.addEventListener('contextmenu', e => e.preventDefault());

        // --- Initialization ---
        startButton.addEventListener('click', () => {
            initAudio();
            messageBox.style.display = 'none';
            resize();
            spawnTargets(10);
            requestAnimationFrame(gameLoop);
        });

        // Initial resize
        resize();
    </script>
</body>
</html>
